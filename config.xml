<?xml version='1.0' encoding='utf-8'?>
<widget id="com.virtuoworks.CanvasCameraCordovaDemo" version="1.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>canvascamera-cordova-demo</name>
    <description>
        A sample Apache Cordova application that uses the canvas camera plugin.
    </description>
    <author email="contact@virtuoworks.com" href="http://www.virtuoworks.com">
      VirtuoWorks Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
